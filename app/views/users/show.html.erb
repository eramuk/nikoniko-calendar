<% provide(:title, 'Your mood') %>

<div class="container">
  <div class="row">
    <div class="col s4 offset-s4 " style="display:inline-flex">
      <p>Today's mood?</p>
      <%= form_for(:mood, url: moods_path) do |f| %>
        <%= f.hidden_field :date, :value => @calendar_dates.last %>
        <%= f.hidden_field :score, :value => Mood::Score::GOOD %>
        <%= image_submit_tag "mood_good.png", class: "mood-img" %>
      <% end %>
      <%= form_for(:mood, url: moods_path) do |f| %>
        <%= f.hidden_field :date, :value => @calendar_dates.last %>
        <%= f.hidden_field :score, :value => Mood::Score::NORMAL %>
        <%= image_submit_tag "mood_normal.png", class: "mood-img" %>
      <% end %>
      <%= form_for(:mood, url: moods_path) do |f| %>
        <%= f.hidden_field :date, :value => @calendar_dates.last %>
        <%= f.hidden_field :score, :value => Mood::Score::BAD %>
        <%= image_submit_tag "mood_bad.png", class: "mood-img" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table>
      <tbody>
        <tr>
          <th></th>
          <% @calendar_dates.each do |date| %>
            <th><%= date.day %></th>
          <% end %>
        </tr>
        <tr>
          <% @calendars.each do |calendar| %>
            <td><%= calendar[:user_name] %></td>
            <% calendar[:calendar].each do |day| %>
              <td><%= day[:score] %></td>
            <% end %>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>