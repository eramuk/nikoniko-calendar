<% provide(:title, 'Your mood') %>

<div class="container">
  <div class="row">
    <div class="col s4 offset-s4 " style="display:inline-flex">
      <p>Today's mood?</p>
      <% Mood::Score::list.each do |mood_score| %>
        <%= form_with(model: @today_mood, local: true) do |f| %>
          <%= f.hidden_field :date, value: @calendar_dates.last %>
          <%= f.hidden_field :score, value: mood_score %>
          <%= image_submit_tag Mood::Score::image_path(mood_score), class: "mood-img" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table>
      <tbody>
        <tr>
          <% @calendar.each do |team_name, team_calendars| %>
            <tr>
              <th><%= team_name %></th>
              <% @calendar_dates.each do |date| %>
                <th><%= date.day %></th>
              <% end %>
            </tr>
            <% team_calendars.each do |user_calendars| %>
              <tr>
                <% user_calendars.each do |user_name, calendar| %>
                  <td><%= user_name %></td>
                  <% calendar.each do |day| %>
                    <td><%= day.score %></td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>