<div class="container">
  <h1><%= yield(:title) %></h1>

  <div class="row">
    <%= form_with model: @user do |f| %>
      <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "validate #{form_validate(@user, :name)} form-control" %>
        <% if message = form_error(@user, :name) %>
          <span class="helper-text" data-error="<%= message %>"></span>
        <% end %>
      </div>

      <div class="input-field">
        <%= f.label :email %>
        <%= f.text_field :email, class: "validate #{form_validate(@user, :email)} form-control" %>
        <% if message = form_error(@user, :email) %>
          <span class="helper-text" data-error="<%= message %>"></span>
        <% end %>
      </div>

      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password, class: "validate #{form_validate(@user, :password)} form-control" %>
        <% if message = form_error(@user, :password) %>
          <span class="helper-text" data-error="<%= message %>"></span>
        <% end %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation, class: "validate #{form_validate(@user, :password)} form-control" %>
      </div>

      <%= button_tag 'SUBMIT', class: 'btn waves-effect waves-light', type: 'button', onclick: 'submit();' %>
    <% end %>
  </div>
</div>
