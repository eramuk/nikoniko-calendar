<% unless flash.empty? %>
  <div id="alert-messages">
    <% flash.each do |type, messages| %>
      <%
        color = case type
          when "success" then "green"
          when "danger" then "red darken-1"
        end
      %>
      <% messages.split("\n").each do |message| %>
        <script>
          M.toast({
            html: "<%= message %>",
            classes: "<%= color %>",
            displayLength: "stay"
          })
        </script>
      <% end %>
    </div>
  <% end %>
<% end %>
